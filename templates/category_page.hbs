<div class="container">
  <section class="additional-resources-container" style="margin:30px 0">
    <div class="row row align-items-center">
      <div class="col-lg-5 offset-lg-1 order-lg-1">
        <img
          src="{{asset category.id suffix=".png"}}"
          class="img-fluid"
          alt="Web Development"
        />
      </div>
      <div class="col-lg-6">
        <h1>{{category.name}}</h1>
        <p class="lead text-secondary my-5">{{category.description}}</p>
